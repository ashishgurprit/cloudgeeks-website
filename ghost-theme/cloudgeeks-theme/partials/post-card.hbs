<article class="post-card {{#if featured}}featured{{/if}}">
    {{#if feature_image}}
    <a href="{{url}}" class="post-card-image">
        <img src="{{img_url feature_image size="m"}}" alt="{{title}}" loading="lazy">
    </a>
    {{/if}}

    <div class="post-card-content">
        <div class="post-card-meta">
            {{#primary_tag}}
                <a href="{{url}}" class="post-card-tag">{{name}}</a>
            {{/primary_tag}}
            <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMM DD, YYYY"}}</time>
        </div>

        <h3 class="post-card-title">
            <a href="{{url}}">{{title}}</a>
        </h3>

        {{#if excerpt}}
        <p class="post-card-excerpt">{{excerpt words="25"}}</p>
        {{/if}}

        <div class="post-card-footer">
            {{#primary_author}}
            <div class="post-card-author">
                {{#if profile_image}}
                <img src="{{img_url profile_image size="xs"}}" alt="{{name}}" class="author-avatar">
                {{/if}}
                <span class="author-name">{{name}}</span>
            </div>
            {{/primary_author}}

            <span class="reading-time">{{reading_time}}</span>
        </div>
    </div>
</article>

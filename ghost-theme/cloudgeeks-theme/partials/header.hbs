            {{else}}
                <span class="logo-text">{{@site.title}}</span>
            {{/if}}
        </a>

        <nav class="site-nav">
            {{navigation}}
            <a href="https://cloudgeeks.com.au" class="nav-cta" target="_blank" rel="noopener">
                Main Site
